        <script>

          function changeOrderStatus(orderId, productId, status,qty,payment) {
            $.ajax({
              url: '/orders/orderStatus',
              data: {
                order: orderId,
                product: productId,
                status: status,
                quantity:qty,
                paymentMode:payment
              },
              method: 'post',
              success: (response) => {
                sessionStorage.setItem("reloading", "true");
                document.location.reload();
              }
            })
          }
       
          function myFunction() {
            alertify.success(`Order Cancelled Successfully`);
          }
          window.onload = function () {
            var reloading = sessionStorage.getItem("reloading");
            if (reloading) {
              sessionStorage.removeItem("reloading");
              myFunction();
            }
          }
          function confirmation(orderId, productId, status,quantity,payment) {
            Swal.fire({
              title: 'Are you sure?',
              text: "You won't be able to revert this!",
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#3085d6',
              cancelButtonColor: '#d33',
              confirmButtonText: 'Yes, cancel it!'
            }).then((result) => {
              if (result.isConfirmed) {
                changeOrderStatus(orderId, productId, status,quantity,payment)
              }
            })
          }
          function returnCancelConfirmation(orderId, productId, status,quantity,payment) {
            Swal.fire({
              title: 'Are you sure?',
              text: "You won't be able to revert this!",
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#3085d6',
              cancelButtonColor: '#d33',
              confirmButtonText: 'Yes, cancel it!'
            }).then((result) => {
              if (result.isConfirmed) {
                changeOrderStatus(orderId, productId, status,quantity,payment)
              }
            })
          }





